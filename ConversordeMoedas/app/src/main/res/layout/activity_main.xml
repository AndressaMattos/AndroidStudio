<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006494"
        android:padding="2dip"
        android:text="Conversor de Moedas"
        android:textColor="#E8f1f2"
        android:textSize="28dp" />

    <TextView
        android:id="@+id/Title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006494"
        android:padding="2dip"
        android:text="by Andressa Mattos"
        android:textAlignment="center"
        android:textColor="#E8f1f2"
        android:textSize="18dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Selecione a moeda usada:"
        android:textSize="26dp" />

    <Spinner
        android:id="@+id/spFrom"
        android:layout_width="140dp"
        android:layout_height="41dp"
        android:layout_gravity="center"
        android:textSize="26sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Selecione a moeda para conversÃ£o:"
        android:textSize="26sp" />

    <Spinner
        android:id="@+id/spTo"
        android:layout_width="152dp"
        android:layout_height="49dp"
        android:layout_gravity="center"
        android:scrollbarSize="26sp"
        android:textSize="26sp"
        android:textAlignment="center"
        android:touchscreenBlocksFocus="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:text="Informe o valor:"
        android:textSize="26sp" />

    <EditText
        android:id="@+id/etValueFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Valor"
        android:inputType="number"
        android:textColorLink="@color/cardview_shadow_end_color"
        android:textSize="28sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >


    </LinearLayout>


    <Button
        android:id="@+id/btConvert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/azulmeio"
        android:text="Converter"
        android:textColor="#E8f1f2"
        android:textColorLink="#98FB98"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:textAlignment="center"
        android:textColor="@color/whitefundo"
        android:textSize="26sp"
        android:layout_marginTop="20dp"
        />

</LinearLayout>